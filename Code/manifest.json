{
    "manifest_version": 3,
    "name": "Date Scanner to Calendar",
    "version": "1.0",
    "description": "Scan webpages or PDFs for dates and create calendar invites.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "50": "icons/icon50.png",
        "128": "icons/icon100.png"
      }
    },
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "50": "icons/icon50.png",
      "100": "icons/icon100.png"
    }
  }  